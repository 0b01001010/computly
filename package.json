{
	"name": "a3k.tech",
	"version": "0.1.0",
	"license": "MIT",
	"scripts": {
		"dev": "svelte-kit dev",
		"build": "node ./prepare-posts.js && svelte-kit build",
		"preview": "svelte-kit preview",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --ignore-path .gitignore --ignore-path .prettierignore --write --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"lint:scss": "stylelint \"src/**/*.{css,scss,svelte}\" --config .stylelintrc.json",
		"generate:images": "node ./prepare-posts.js",
		"generate:sitemap": "node ./generate-sitemap.js",
		"prepare": "husky install"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "next",
		"@sveltejs/kit": "next",
		"@typescript-eslint/eslint-plugin": "^5.10.1",
		"@typescript-eslint/parser": "^5.10.1",
		"dayjs": "^1.10.7",
		"dotenv": "^16.0.0",
		"eslint": "^7.32.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-svelte3": "^3.2.1",
		"front-matter": "^4.0.2",
		"husky": "^7.0.4",
		"mdsvex": "^0.10.5",
		"prettier": "^2.4.1",
		"prettier-plugin-svelte": "^2.4.0",
		"sass": "^1.49.7",
		"svelte": "^3.44.0",
		"svelte-check": "^2.2.6",
		"svelte-preprocess": "^4.9.4",
		"tslib": "^2.3.1",
		"typescript": "^4.4.3",
		"vanilla-lazyload": "^17.5.0"
	},
	"optionalDependencies": {
		"sharp": "^0.30.0"
	},
	"type": "module",
	"dependencies": {
		"papercss": "^1.8.3",
		"postcss": "^8.4.6",
		"postcss-html": "^1.3.0",
		"spaper": "^0.3.6",
		"stylelint": "^14.5.0",
		"stylelint-config-recommended-scss": "^5.0.2",
		"stylelint-config-standard": "^25.0.0",
		"stylelint-scss": "^4.1.0"
	}
}
